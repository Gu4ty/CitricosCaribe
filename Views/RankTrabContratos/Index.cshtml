@model IEnumerable<CitricosCaribe.Models.RankTrabContratosViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Ranking de los trabajadores segun la cantidad  de contratos por contrato</h1>
<br><br>

<table class="table">
    <thead>
        <tr>
            <th>
                Trabajador
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CCISortParm"]">Cantidad de Contratos de Compra Internacional</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CCNSortParm"]">Cantidad de Contratos de Compra Nacional</a>
               
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CVISortParm"]">Cantidad de Contratos de Venta Internacional</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CVNSortParm"]">Cantidad de Contratos de Venta Nacional</a>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-area="" asp-controller="Trabajador" asp-action="Details" asp-route-id="@item.Trabajador.CI" >@Html.DisplayFor(modelItem => item.Trabajador.Nombre)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CntCCI)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.CntCCN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CntCVI)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.CntCVN)
            </td>
            
        </tr>
}
    </tbody>
</table>
